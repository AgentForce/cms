doctype html
html(lang='')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - Login CMS
    meta(name='description', content='')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/font-awesome.css')
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic,400italic,700,700italic')
    script(src='/js/jquery-1.11.1.min.js')
  
  body.login-bg
    .login-body
      .login-heading
        h1 Login
      .login-info
         form.form-horizontal(method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group
            label.col-sm-3.control-label(for='username') Username
            .col-sm-7
              input.form-control(type='username', name='username', id='username', placeholder='Username', autofocus, required)
          .form-group
            label.col-sm-3.control-label(for='password') Password
            .col-sm-7
              input.form-control(type='password', name='password', id='password', placeholder='Password', required)
          .form-group
            .col-sm-offset-3.col-sm-7
              button.col-sm-9.btn.btn-primary(type='submit')
                i.fa.fa-user
                | Login
